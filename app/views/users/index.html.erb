<h1>Users</h1>

<%= link_to 'New', new_user_path %>

<table class="table">
    <thead>
        <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.address %></td>
                <td><%= user.e_mail %></td>
                <td><%= link_to 'view' , user_path(user.id)  %>
                    <%= link_to 'edit' , edit_user_path(user.id)  %>
                    <%= button_to 'delete' , user_path(user.id), method: :delete,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>